<h1 class="middle label-style-btm" >My Categories</h1>
<% @sorted_categories.each do |category| %>
<% if current_user.id == category.user_id %>
<div class="">
  <div class="myaccordion">
    <div class="card ">
      <div class="card-header">
        <div class="label-style-category">Category</div>
        <h2 class="mb-0 middle">
          <button class=" btn btn-link">
            <%= link_to "#{category.name}", category_posts_path(category), class: "nav-link text-center" %>
          </button>
          <div class="label-style-category">
            <%=pluralize(category.posts.count, 'post')%>
          </div>
        </h2>

      </div>
    </div>
  </div>
</div>
<%end%>
<%end%>