<div class="header-div">
  <h1 class="nav-header home-background"><%= link_to "My Code Library", root_path, class: "nav-header letter-space" %></h1>
</div>

<div class="mob-nav">
  <% if user_signed_in? %>  
  <ul class="nav " id="nav_bar">
    <li class=" nav-item">
      <%= link_to "Home", root_path, class: "nav-link home-space"%>
    </li>

    <div class="nav">
      <div class=" nav-item dropdown">
        <button  class=" nav-link dropdown-toggle" data-toggle="dropdown">
          Menu
