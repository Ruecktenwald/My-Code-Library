<div class="container-fluid">
  <div class="middle">
    <%= form_for @category do |f| %>
    <%= render "shared/errors", object: @category %>
    <div>
      <%= f.label :name, "Name:"%><br>
      <%= f.text_field :name, style: 'text-transform: capitalize;', size: "80x12", class: " code-background-show text-color container-fluid" %><br><br>
      <%= f.select :status, options_for_select([["Regular", "regular"], ["Top Four", "top_four"]], @category.status) %>
      
      <br><br>
      <%= f.submit "Save", class: "btn btn-dark" %>
      <% if @category.id? %>
      <%= link_to 'Delete', @category, class: 'btn btn-red', method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
      <% end %>   
    </div>
  </div>  
</div>

