<div class="container-fluid">
	<div class="middle">
		<%= form_for @post do |f| %>
		
		<%= render "shared/errors", object: @post %>
		<%= f.label :description, "Description:"%><br>
		<%= f.text_field :description, size: "80x12" %><br><br>

		<%= f.label :code, "Code:" %> <br>
		<%= f.text_area :code, size: "80x10" %><br><br>
		<%= f.select :category,  Post::CATEGORIES, prompt: "Pick one"%><br><br>


		<%= f.submit "Save", class: "btn btn-dark" %>
		
    <% if @post.id != nil %>
    <%= link_to 'Delete', @post, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
    <% end %>
  </div>	
</div>

