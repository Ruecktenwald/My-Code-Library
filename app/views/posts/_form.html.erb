<%= form_for @post do |f| %>
	
	<%= f.select :category, options_for_select([["Select One", ""], "Rails", "Javascript", "HTML", "Ruby"]), :class => 'genForm_dropBox' %>

	<%= f.text_field :description %>

	<%= f.text_area :code %>

	<%= f.submit "Save" %>

<% end %>

<%= link_to 'Delete', @post, class: 'button', method: :delete, data: { confirm: 'Are you sure?' } %>