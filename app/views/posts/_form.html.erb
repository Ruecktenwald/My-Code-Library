<div class=" middle myaccordion">
	<div class="">
		<%= form_for @post do |f| %>
		
		<%= render "shared/errors", object: @post %>
		<%= f.label :description %><br>
		<%= f.text_field :description, size: "60x12" %><br><br>

		<%= f.label :code %> <br>
		<%= f.text_area :code, size: "60x10" %><br><br>
		<%= f.select :category,  Post::CATEGORIES, prompt: "Pick one"%><br><br>


		<%= f.submit "Save", class: "btn btn-dark" %>
		<%= link_to 'Delete', @post, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
		<% end %>
	</div>	
</div>

